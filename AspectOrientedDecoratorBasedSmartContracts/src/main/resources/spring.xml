<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="https://www.springframework.org/schema/beans"
	xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="https://www.springframework.org/schema/aop"
	xsi:schemaLocation="https://www.springframework.org/schema/beans https://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		https://www.springframework.org/schema/aop https://www.springframework.org/schema/aop/spring-aop-4.0.xsd">

<!-- Enable AspectJ style of Spring AOP -->
<aop:aspectj-autoproxy />

<!-- Configure Employee Bean and initialize it -->
<bean name="person" class="de.aspect.programming.samples.aspectorientation.Person">
	<property name="name" value="John Doe"></property>
</bean>

<!-- Configure EmployeeService bean -->
<bean name="personService" class="de.aspect.programming.samples.aspectorientation.Person">
	<property name="person" ref="person"></property>
</bean>

<!-- Configure Aspect Beans, without this Aspects advices wont execute -->
<bean name="personAspect" class="de.aspect.programming.samples.aspectorientation.aspects.PersonAspect" />
<bean name="personAspectPointcut" class="de.aspect.programming.samples.aspectorientation.pointcut.PersonAspectPointcut" />
<bean name="personAspectJoinPoint" class="de.aspect.programming.samples.aspectorientation.joinpoint.PersonAspectJoinPoint" />
<bean name="personAfterAspect" class="de.aspect.programming.samples.aspectorientation.aspects-PersonAfterAspect" />
<bean name="personAroundAspect" class="de.aspect.programming.samples.aspectorientation.EmployeeAroundAspect" />
<bean name="personAnnotationAspect" class="com.journaldev.spring.aspect.EmployeeAnnotationAspect" />

</beans>
